<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#C0DFF8">

    <EditText
        android:id="@+id/enterVideoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter YouTube Video URL" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:layout_below="@id/enterVideoUrl"
        android:layout_marginTop="16dp"
        android:backgroundTint="#69C9F4"
        android:textColor="#01182A"/>

    <Button
        android:id="@+id/btnAddPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Playlist"
        android:layout_below="@id/btnPlay"
        android:layout_marginTop="16dp"
        android:backgroundTint="#69C9F4"
        android:textColor="#01182A"/>

    <Button
        android:id="@+id/btnViewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Playlist"
        android:layout_below="@id/btnAddPlaylist"
        android:layout_marginTop="16dp"
        android:backgroundTint="#69C9F4"
        android:textColor="#01182A"/>
</RelativeLayout>